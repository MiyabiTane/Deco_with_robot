#!/usr/bin/env roseus

;; load package
(ros::load-ros-package "std_srvs")
(ros::roseus "miraikan")

(defun call_service (service_name)
  (ros::wait-for-service service_name)
  (call-empty-service service_name)
  (ros::duration-sleep 15.0)
  )

(defun main ()
  (ros::duration-sleep 5.0)
  (call_service "episode_introduction")
  (call_service "episode_0_1")
  (call_service "episode_0_2")
  (call_service "episode_1_1")
  (call_service "episode_1_2")
  (call_service "episode_1_3")
  (call_service "episode_1_4")
  (call_service "episode_2")
  (call_service "episode_3_1")
  (call_service "episode_3_2")
  (call_service "episode_3_3")
  (call_service "episode_4_1")
  (call_service "episode_4_2")
  (call_service "episode_5_1")
  (call_service "episode_5_2")
  (call_service "episode_summary")
  (call_service "episode_6")
  )

(main)
(ros::exit)
